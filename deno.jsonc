{
	// Import aliases
	"imports": {
		"@/": "./",
		"pkg/": "./pkg/",
		"src/": "./src/"
	},


	// Compiler options
	"compilerOptions": {
		"lib": [
			"deno.ns",
			"ESNext",
			"DOM"
		],
		"strict": true
	},


	// Runtime options
	"unstable": [
		"sloppy-imports"
	],



	// Linting options
	"lint": {
		"rules": {
			"exclude": [
				"no-sloppy-imports"
			]
		}
	}
}